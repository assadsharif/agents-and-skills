# Stock Signal API Environment Variables Template
# Copy this file to .env and fill in your values

# API Configuration
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# Cache Configuration
CACHE_TTL=900  # 15 minutes in seconds
CACHE_MAX_SIZE=500  # Maximum number of tickers to cache

# Authentication
ADMIN_API_KEY=  # Master admin key for /admin endpoints (leave empty to disable admin)
# USER_DATA_FILE=data/users.json  # Path to JSON user store
# RATE_LIMIT_MAX_REQUESTS=100  # Max requests per hour per API key
# RATE_LIMIT_WINDOW_SECONDS=3600  # Rate limit window in seconds

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data Source Configuration
# No API key required for Yahoo Finance via yfinance
# If migrating to Alpha Vantage in the future, add:
# ALPHA_VANTAGE_API_KEY=your_api_key_here

# Development Settings
# RELOAD=true  # Enable auto-reload for development (uvicorn --reload)
